/* Breagar turns on CHARNAME if Dwarves are attacked */

IF 
	OR(4)
		Allegiance("BDDEEP",[ENEMY])
		Allegiance("BDDEEP2",[ENEMY])
		Dead("BDDEEP")
		Dead("BDDEEP2")
	OR(2)
		See("BDDEEP")
		See("BDDEEP2")
	Global("ACBre_SoDDeepvein","LOCALS",0)
THEN
	RESPONSE #100
		SetGlobal("ACBre_SoDDeepvein","LOCALS",1)
END

IF
